{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier", "stylelint-config-recess-order"],
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "mixin",
          "include",
          "extend",
          "if",
          "else",
          "for",
          "each",
          "while",
          "function",
          "return"
        ]
      }
    ],
    "unit-allowed-list": ["em", "rem", "px", "%", "vh", "vw", "vmin", "vmax", "deg", "s", "ms", "fr"],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes", "compose-with"]
      }
    ],
    "selector-class-pattern": [
      "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
      {
        "message": "Expected class selector to be BEM format"
      }
    ],
    "max-nesting-depth": 4,
    "no-duplicate-selectors": true,
    "no-empty-source": null,
    "selector-max-id": 0,
    "selector-no-qualifying-type": [
      true,
      {
        "ignore": ["attribute"]
      }
    ]
  },
  "ignoreFiles": ["node_modules/**/*", "dist/**/*", "build/**/*", "coverage/**/*", "**/*.min.css"],
  "overrides": [
    {
      "files": ["*.scss", "**/*.scss"],
      "customSyntax": "postcss-scss",
      "rules": {
        "scss/at-rule-no-unknown": true,
        "scss/dollar-variable-pattern": "^[a-z][a-zA-Z0-9]*$",
        "scss/percent-placeholder-pattern": "^[a-z][a-zA-Z0-9]*$"
      }
    },
    {
      "files": ["*.vue", "**/*.vue"],
      "customSyntax": "postcss-html"
    }
  ]
}
