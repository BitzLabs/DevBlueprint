{
  "name": "DevBlueprint MkDocs Environment",
  "dockerComposeFile": "../../Docker/docker-compose.yml",
  "service": "mkdocs",
  "workspaceFolder": "/docs",

  // VSCode設定
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.md": "markdown"
        },
        "markdownlint.config": {
          "MD033": false,
          "MD041": false
        }
      }
    }
  },

  // ポートフォワーディング
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "MkDocs Server",
      "onAutoForward": "notify"
    }
  },

  // コンテナ作成後のコマンド
  "postCreateCommand": "pip install -r Docker/mkdocs/requirements.txt",

  // リモートユーザー
  "remoteUser": "root",

  // WSL環境での実行
  "overrideCommand": false,
  "shutdownAction": "stopCompose",

  // 必要に応じてライフサイクルスクリプト
  "initializeCommand": "echo 'Initializing DevBlueprint MkDocs environment...'",
  "onCreateCommand": "echo 'Container created successfully!'",
  "updateContentCommand": "echo 'Updating content...'",
  "postStartCommand": "echo 'Starting MkDocs development server...'"
}
