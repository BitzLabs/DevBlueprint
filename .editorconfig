# EditorConfig is awesome: https://EditorConfig.org

# 全ファイルに適用される共通設定
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdownファイルの設定
[*.md]
trim_trailing_whitespace = false
# Markdownはネストリストのインデントを4スペース運用（MD007=4）とし、MkDocsの判定とも整合
indent_size = 4

# 注意: Prettier/VSCodeはこのEditorConfigを尊重する設定にしてあります。
# - .vscode/settings.json: editor.detectIndentation=false, editor.tabSize=2, [markdown]は4
# - .prettierrc.json: デフォルトtabWidth=2、*.md overrideでtabWidth=4
